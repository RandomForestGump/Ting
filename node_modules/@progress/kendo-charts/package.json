{
  "name": "@progress/kendo-charts",
  "description": "Kendo UI platform-independent Charts library",
  "author": "Progress",
  "license": "SEE LICENSE IN license.txt",
  "version": "1.20.1",
  "main": "dist/npm/main.js",
  "module": "dist/es/main.js",
  "jsnext:main": "dist/es/main.js",
  "es2015": "dist/es2015/main.js",
  "typings": "dist/npm/main.d.ts",
  "jsdelivr": "dist/cdn/main.js",
  "unpkg": "dist/cdn/main.js",
  "sideEffects": true,
  "scripts": {
    "build-package": "gulp build-rollup-package && gulp build-cdn",
    "test": "TZ=Europe/Sofia jest",
    "watch-test": "jest --watch",
    "e2e": "ENV_BROWSER=Chrome_headless gulp e2e",
    "watch-e2e": "ENV_BROWSER=Chrome_headless gulp watch-e2e",
    "e2e:ci": "CHROME_BIN=`which chromium-browser` NO_SANDBOX=true ENV_BROWSER=Chrome_headless npm run e2e",
    "e2e_visual:ci": "./bin/run-e2e-visual.sh",
    "lint": "gulp lint",
    "semantic-release": "semantic-release pre && semantic-prerelease publish && semantic-release post",
    "prepare": "is-ci || husky install"
  },
  "keywords": [
    "Kendo UI",
    "Progress",
    "DataViz",
    "Angular 2",
    "Charts"
  ],
  "dependencies": {},
  "peerDependencies": {
    "@progress/kendo-drawing": "^1.0.0"
  },
  "devDependencies": {
    "@progress/kendo-drawing": "dev",
    "@progress/kendo-e2e": "^0.6.0",
    "@progress/kendo-package-tasks": "^4.0.9",
    "@progress/kendo-theme-default": "^4.35.0",
    "@telerik/eslint-config": "^1.0.0",
    "@telerik/kendo-intl": "^1.0.0",
    "@telerik/semantic-prerelease": "^1.0.0",
    "@types/jest": "^26.0.24",
    "core-js": "2.4.1",
    "cz-conventional-changelog": "^1.1.5",
    "d3-scale-chromatic": "^3.0.0",
    "es-jest": "^1.2.0",
    "ghooks": "^1.0.3",
    "gulp": "^4.0.0",
    "husky": "^7.0.1",
    "is-ci": "^3.0.0",
    "jest-cli": "^26.6.3",
    "semantic-release": "^6.3.6",
    "validate-commit-msg": "^1.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/telerik/kendo-charts.git"
  },
  "bugs": {
    "url": "https://github.com/telerik/kendo-angular"
  },
  "release": {
    "debug": false,
    "branchTags": {
      "develop": "dev"
    },
    "fallbackTags": {
      "dev": "latest"
    },
    "analyzeCommits": "@telerik/semantic-prerelease/analyzeCommits",
    "generateNotes": "@telerik/semantic-prerelease/generateNotes",
    "getLastRelease": "@telerik/semantic-prerelease/getLastRelease",
    "verifyConditions": "@telerik/semantic-prerelease/verifyConditions",
    "verifyRelease": "@telerik/semantic-prerelease/verifyRelease"
  },
  "files": [
    "dist"
  ]
}